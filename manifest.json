{
  "manifest_version": 3,
  "name": "THE QUICKNESS",
  "version": "1.1.2",
  "description": "Instant webpage screenshots to PDF with notes and bookmarks. Click extension icon to capture any page and save organized PDFs.",
  "author": "THE QUICKNESS Team",
  "homepage_url": "https://github.com/onebaldegg/The-Quickness-FINISHED",
  "browser_specific_settings": {
    "gecko": {
      "id": "the-quickness@thequicknessteam.com",
      "strict_min_version": "109.0"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "bookmarks"
  ],
  "background": {
    "scripts": ["background-firefox.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jspdf.umd.min.js", "content-firefox.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "THE QUICKNESS - Click to capture screenshot and create PDF"
  },
  "icons": {
    "16": "Extension Icon.png",
    "32": "Extension Icon.png",
    "48": "Extension Icon.png",
    "128": "Extension Icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}