{
  "manifest_version": 3,
  "name": "THE QUICKNESS",
  "version": "1.1.2",
  "description": "Instant webpage screenshots to PDF with notes and bookmarks. Click extension icon to capture any page and save organized PDFs.",
  "author": "THE QUICKNESS Team",
  "homepage_url": "https://github.com/onebaldegg/The-Quickness-FINISHED",
  "browser_specific_settings": {
    "gecko": {
      "id": "the-quickness@thequicknessteam.com",
      "strict_min_version": "109.0"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "bookmarks"
  ],
  "background": {
    "scripts": ["background-firefox.js"]
  },
  "action": {
    "default_title": "THE QUICKNESS - Click to capture screenshot and create PDF"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["jspdf.umd.min.js", "logo-data.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}